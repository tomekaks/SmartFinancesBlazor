<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Align="Align.Center" Typo="Typo.h6">Current account</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudStack Row="true" Justify="Justify.SpaceBetween">
            <MudText>@CurrentAccount.Name </MudText>
            <MudText>@CurrentAccount.Balance EUR</MudText>
        </MudStack>
        <MudText Typo="Typo.caption">@CurrentAccount.Number</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public TransactionalAccountVM CurrentAccount { get; set; }
}
