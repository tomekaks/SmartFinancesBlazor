<div class="card shadow">
    <div class="card-header text-center">
        <h6 class="mb-0">Current account</h6>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <p class="mb-0">@CurrentAccount.Name</p>
            <p class="mb-0">@CurrentAccount.Balance EUR</p>
        </div>
        <p class="text-muted mt-2 mb-0">@CurrentAccount.Number</p>
    </div>
</div>

@code {
    [Parameter]
    public TransactionalAccountVM CurrentAccount { get; set; }
}
