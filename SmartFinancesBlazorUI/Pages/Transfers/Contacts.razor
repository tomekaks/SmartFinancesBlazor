

<h1>Contacts</h1>

<p>
    <a asp-action="CreateContact" class="btn btn-secondary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Account number</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contacts)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.AccountNumber</td>
                <td>
                    <form asp-action="UseContact" asp-route-id="@item.Id">
                        <button type="submit" onclick="return confirm('Do you want to use this contact?')" class="btn btn-success">Use</button>  
                    </form>
                </td>
                <td>
                    <a asp-action="EditContact" asp-route-id="@item.Id" class="btn btn-info">Edit</a> 
                </td>
                <td>
                    <form asp-action="DeleteContact" asp-route-id="@item.Id">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="NewTransfer" class="btn btn-primary">Back</a>
</div>

