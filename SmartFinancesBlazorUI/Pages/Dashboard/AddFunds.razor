@page "/dashboard/addfunds"
@inject NavigationManager NavManager
@inject IDashboardService DashboardService

<PageTitle>Add funds</PageTitle>

<EditForm Model="@Model" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <MudGrid>
        <MudItem xs="12" sm="5">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h4">Add Funds</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudTextField Label="Name" @bind-Value="Model.Amount" For="@(() => Model.Amount)" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="me-0" OnClick="NavigateToDashboard">Back</MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Class="ml-auto" Color="Color.Success">Add</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>


@code {
    private AddFundsVM Model = new AddFundsVM();

    private async Task HandleSubmit()
    {
        bool response = await DashboardService.AddFundsAsync(Model);
        if (response)
        {
            NavigateToDashboard();
        }
    }

    private void NavigateToDashboard()
    {
        NavManager.NavigateTo("/dashboard");
    }
}
