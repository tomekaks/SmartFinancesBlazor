@page "/contacts/contacts"
@inject IContactsService ContactsService
@inject NavigationManager NavigationManager

<h1>Contacts</h1>

<p>
    <button class="btn btn-secondary" @onclick="NavigateToCreateContact">Create New</button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Account number</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in contacts)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.AccountNumber</td>
                <td>
                    <form asp-action="UseContact" asp-route-id="@contact.Id">
                        <button type="submit" onclick="return confirm('Do you want to use this contact?')" class="btn btn-success">Use</button>
                    </form>
                </td>
                <td>
                    <a asp-action="EditContact" asp-route-id="@contact.Id" class="btn btn-info">Edit</a>
                </td>
                <td>
                    <form asp-action="DeleteContact" asp-route-id="@contact.Id">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button class="btn btn-primary" @onclick="NavigateToNewTransfer">Back</button>
</div>

@code {
    private List<ContactVM> contacts = new List<ContactVM>();

    private void NavigateToCreateContact()
    {
        NavigationManager.NavigateTo("/contacts/createcontact");
    }
    private void NavigateToNewTransfer()
    {
        NavigationManager.NavigateTo("/transfers/newtransfer");
    }
}



