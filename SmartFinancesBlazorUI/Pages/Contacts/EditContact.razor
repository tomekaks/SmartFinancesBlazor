@page "/contacts/editcontact"
@inject NavigationManager NavigationManager

<h1>Edit Contact</h1>

<div class="row">
    <div class="col-md-4">
        <EditForm Model="@model" OnInvalidSubmit="HandleSubmit">
            <DataAnnotationsValidator />
            <input hidden asp-for="Id" />

            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <InputText id="Name" @bind-Value="@model.Name" class="form-control" />
                <ValidationMessage For="@(() => model.Name)" />
            </div>

            <div class="form-group">
                <label for="AccountNumber" class="control-label">Account number</label>
                <InputText id="AccountNumber" @bind-Value="@model.AccountNumber" class="form-control" />
                <ValidationMessage For="@(() => model.AccountNumber)" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-info">Save</button>
            </div>

        </EditForm>
    </div>
</div>

<div>
    <button class="btn btn-primary" @onclick="NavigateToContacts">Back to List</button>
</div>

@code {
    private EditContactVM model = new EditContactVM();

    private void HandleSubmit()
    {
        
    }

    private void NavigateToContacts()
    {
        NavigationManager.NavigateTo("/contacts/contacts");
    }
}
