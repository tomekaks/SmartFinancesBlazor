@page "/contacts/createcontact"
@inject NavigationManager NavigationManager

<h1>Create Contact</h1>

<div class="row">
    <div class="col-md-4">
        <EditForm Model="@contact" OnValidSubmit="@HandleSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="Name">Name</label>
                <InputText id="Name" @bind-Value="contact.Name" class="form-control" />
                <ValidationMessage For="@(() => contact.Name)" />
            </div>

            <div class="form-group">
                <label for="AccountNumber">Account Number</label>
                <InputText id="AccountNumber" @bind-Value="contact.AccountNumber" class="form-control" />
                <ValidationMessage For="@(() => contact.AccountNumber)" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Create</button>
            </div>

        </EditForm>
    </div>
</div>

<div>
    <button class="btn btn-primary" @onclick="NavigateToContacts">Back</button>
</div>

@code {
    private NewContactVM contact = new NewContactVM();

    private void NavigateToContacts()
    {
        NavigationManager.NavigateTo("/contacts/contacts");
    }

    private void HandleSubmit()
    {
        //TODO
    }
}


